<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/standardMargin3x"/>
            <padding android:right="@dimen/standardMargin" android:left="@dimen/standardMargin" android:bottom="@dimen/standardMargin" android:top="@dimen/standardMargin"/>
            <stroke android:width="1dp" android:color="@color/red"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/standardMargin3x"/>
            <padding android:right="@dimen/standardMargin" android:left="@dimen/standardMargin" android:bottom="@dimen/standardMargin" android:top="@dimen/standardMargin"/>
            <stroke android:width="1dp" android:color="@color/white_varient"/>
        </shape>
    </item>
</selector>