<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/faqRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/standardMargin"
        android:focusableInTouchMode="true"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="@dimen/standardMargin"
        android:padding="@dimen/standardMargin1.5x"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fav_image"
            android:layout_width="25dp"
            app:tint="@color/black"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_show_chart_24"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نمودار قیمت"
            android:layout_toEndOf="@+id/fav_image"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/standardMargin"
            android:textStyle="bold"
            android:textSize="@dimen/TextSize4x"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/whiteBackground"/>
    <RelativeLayout
        android:id="@+id/privacyRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="@dimen/standardMargin"
        android:padding="@dimen/standardMargin1.5x"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="25dp"
            app:tint="@color/black"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_compare_24"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مقایسه محصول"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/comment_image"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/standardMargin"
            android:textStyle="bold"
            android:textSize="@dimen/TextSize4x"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/whiteBackground"/>
    <RelativeLayout
        android:id="@+id/termsOfUsageRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="@dimen/standardMargin"
        android:padding="@dimen/standardMargin1.5x"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/address_image"
            android:layout_width="25dp"
            app:tint="@color/black"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="به اشتراک گذاری کالا"
            android:layout_toEndOf="@+id/address_image"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/standardMargin"
            android:textStyle="bold"
            android:textSize="@dimen/TextSize4x"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/whiteBackground"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="@dimen/standardMargin"
        android:paddingVertical="@dimen/standardMargin1.5x"
        android:paddingStart="@dimen/standardMargin1.5x"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/reportBug_image"
            android:layout_width="25dp"
            app:tint="@color/black"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اطلاع رسانی شگفت انگیز"
            android:layout_toEndOf="@+id/reportBug_image"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/standardMargin"
            android:textStyle="bold"
            android:textSize="@dimen/TextSize4x"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/standardMargin1.5x"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>