<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:padding="@dimen/standardMargin"
    android:layout_height="wrap_content">

    <com.dust.exmall.customviews.CTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/TextSize4x"
        tools:text="عنوان"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainerOne"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/standardMargin"
        android:layout_marginHorizontal="2dp"
        android:visibility="gone"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/standardMargin1.5x"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headerImageOne"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="@dimen/standardMargin2x"
            tools:src="@drawable/bg_one"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainerTwo"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/standardMargin"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/standardMargin2x"
        android:layout_marginHorizontal="2dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headerImageTwo"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            tools:src="@drawable/bg_one"
            android:padding="@dimen/standardMargin2x"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <com.dust.exmall.customviews.CTextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:layout_marginTop="@dimen/standardMargin1.5x"
        tools:text="توضیحات"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/moreDescriptionContainer"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/standardMargin"
        android:layout_marginTop="@dimen/standardMargin1.5x"
        app:cardElevation="0dp"
        android:backgroundTint="@color/whiteBackground"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <com.dust.exmall.customviews.CTextView
            android:id="@+id/moreDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توضیحات اضافه"
            android:textDirection="rtl"
            android:textColor="@color/light_black"
            android:padding="@dimen/standardMargin"
            android:textSize="@dimen/TextSize4x"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainerThree"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/standardMargin"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/standardMargin2x"
        android:layout_marginHorizontal="2dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bottomImageOne"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            tools:src="@drawable/bg_one"
            android:padding="@dimen/standardMargin2x"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainerFour"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/standardMargin"
        android:layout_marginTop="@dimen/standardMargin2x"
        android:layout_marginHorizontal="2dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bottomImageTwo"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            tools:src="@drawable/bg_one"
            android:padding="@dimen/standardMargin2x"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/standardMargin1.5x"
        android:background="@color/whiteBackground"/>
</LinearLayout>