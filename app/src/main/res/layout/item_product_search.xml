<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/standardMargin"
    android:layout_margin="@dimen/standardMargin0.5x"
    android:layout_height="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="90dp"
            android:layout_margin="@dimen/standardMargin"
            android:layout_height="match_parent"
            android:src="@drawable/bg_one"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/productImage"
            android:orientation="vertical">
            <com.dust.exmall.customviews.CTextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TextSize3x"
                android:maxLines="1"
                android:textColor="@color/black_normal"
                android:text="کتاب ذکر صلوات اثر حشمت"/>

            <com.dust.exmall.customviews.CTextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="@dimen/standardMargin0.5x"
                android:textSize="@dimen/TextSize3x"
                android:textColor="@color/black_normal"
                android:text="سروری فخر انتشارات خلاق"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>