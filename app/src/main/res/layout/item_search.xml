<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_margin="@dimen/standardMargin"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/searchImage"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_search_24"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/standardMargin"
        android:layout_toStartOf="@+id/searchImage"
        android:orientation="vertical">
        <com.dust.exmall.customviews.CTextView
            android:id="@+id/tagTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TextSize3x"
            android:textColor="@color/black_normal"
            android:text="کتاب ذهن فقیر"/>

        <com.dust.exmall.customviews.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TextSize3x"
            android:textColor="@color/light_black"
            android:layout_marginTop="@dimen/standardMargin0.5x"
            android:text="در دسته کتاب"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/relativeImage"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_north_east_24"/>
</RelativeLayout>