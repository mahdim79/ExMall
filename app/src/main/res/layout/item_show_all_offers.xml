<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/amazingOffersWidth"
    android:layout_margin="@dimen/standardMargin0.5x"
    app:cardElevation="@dimen/standardMargin0.5x"
    app:cardCornerRadius="@dimen/standardMargin"
    android:backgroundTint="?colorPrimary"
    android:layout_height="@dimen/amazingOffersHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_round_arrow_back_24"
            app:tint="@color/red"/>

        <com.dust.exmall.customviews.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مشاهده همه"
            android:textStyle="bold"
            android:textColor="@color/black_normal"
            android:layout_marginTop="@dimen/standardMargin"
            android:textSize="12dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
