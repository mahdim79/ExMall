<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نقد و بررسی"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/standardMargin1.5x"
        android:layout_marginHorizontal="@dimen/standardMargin"
        android:textStyle="bold"
        android:textSize="@dimen/TextSize4x"/>
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="end"
        android:layout_margin="@dimen/standardMargin1.5x"
        app:cardCornerRadius="@dimen/standardMargin">
        <LinearLayout
            android:id="@+id/strongPointsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standardMargin"
            android:orientation="vertical">
            <com.dust.exmall.customviews.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ نقاط قوت"
                android:layout_gravity="end"
                android:textColor="@color/green"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/standardMargin"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="end"
        android:layout_margin="@dimen/standardMargin1.5x"
        app:cardCornerRadius="@dimen/standardMargin">
        <LinearLayout
            android:id="@+id/weakPointsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standardMargin"
            android:orientation="vertical">
            <com.dust.exmall.customviews.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- نقاط ضعف"
                android:layout_gravity="end"
                android:textColor="@color/red"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/standardMargin"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
